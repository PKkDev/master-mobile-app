<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MasterMobile.Pages.SmsReaderPagesVIew.SmsReaderPage"
             Title="{Binding Title}">

    <ContentPage.Content>

        <StackLayout Orientation="Vertical" Padding="20,5">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Row="1" 
                             Orientation="Horizontal" 
                             Spacing="15">
                    <Label VerticalOptions="Center" 
                           FontSize="Medium" 
                           WidthRequest="100"  
                           Text="{Binding SmsPremission}"/>
                    <Button   Text="check" 
                              CornerRadius="15" 
                              Command="{Binding CheckSmsPremissions}"/>
                    <Button   Text="Get" 
                              CornerRadius="15" 
                              Command="{Binding StartGetSmsPremissions}"/>
                </StackLayout>

            </Grid>

        </StackLayout>

    </ContentPage.Content>

</ContentPage>